<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :login, :required => true, :autofocus => true, :label=>"Username", :hint => "Enter your username or email address" %>
  </div>

  <div class="form-actions">
    <label>&nbsp;</label><%= f.button :submit, "Send me reset password instructions" %>
  </div>

  <div class="shared_links">
    <label>&nbsp;</label><%= render "devise/shared/links" %>
  </div>

<% end %>
